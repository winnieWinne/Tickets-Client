extends ../layout

block links
  link(rel="stylesheet" href="/styles/booking_ticket.css")

block content
  include head_bar.jade

  div#booking_hint
    img(src="/static/pictures/assets/getTicket_img_cellphone.png")
  div#input_hint
  div#booking_ticket_container
    div#booking_info_container
      div#movie_info_poster
        img#movie_info_poster_img(src='')
      div#movie_info_text
        div#movie_info_time
          div#movie_info_date date
          div#movie_info_show_time time
        div#movie_info_loc
          div#movie_info_cinema cinema
          div#movie_info_cinema_hall cinema_hall
          div#movie_info_seats seats
    div#phone_check_container

block scripts
  script(type="text/javascript" src="/scripts/booking_ticket.js")
  script(type="text/javascript" src="http://code.jquery.com/jquery-1.11.0.min.js")
